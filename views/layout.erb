<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%== assets(:css) %>
    <title>CSPVR<% if @page_title %> - <%= @page_title %><% end %></title>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <a class="navbar-brand" href="/">CSPVR</a>
        <% if account_id %>
          <form action="/logout" class="navbar-form" method="post">
            <%== csrf_tag("/logout") %>
            <input class="btn btn-warning pull-right form-control" type="submit" value="Logout" />
          </form>
        <% end %>
      </div>
    </nav>

    <div class="container" id="content">
      <% if flash['notice'] %>
        <div class="alert alert-success" role="alert"><%= flash['notice'] %></div>
      <% end %>
      <% if flash['error'] %>
        <div class="alert alert-danger" role="alert"><%= flash['error'] %></div>
      <% end %>
      <% if @page_title %>
        <h1><%= @page_title %></h1>
      <% end %>
      <%== yield %>
    </div>
  </body>
</html>
